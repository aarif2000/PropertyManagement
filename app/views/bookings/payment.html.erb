<section class="p-4 p-md-5" style="
    background-color: #241c30">
  <div class="row d-flex justify-content-center">
    <div class="col-md-10 col-lg-8 col-xl-5">
      <div class="card rounded-3" style="width:120%;">
        <div class="card-body p-4" >
            <p class="fw-bold mb-4">Enter Card Details :</p>
            <%= form_with url: "/charge/#{params[:id]}", method: :post  do |f| %>
            <div class="row mb-4">
              <div class="col-7">
                <%=f.hidden_field :property_id, value: params[:property_id]%>
                <%=f.hidden_field :price, value: params[:price]%>
                <%=f.hidden_field :booking_time, value: params[:booking_time]%>
                <div class="form-outline">
                
                    <%=f.text_field :number, class: "form-control form-control-lg", placeholder: "Enter Valid Card.", style: "width:250px"%>
                    <%=f.label :number, "Card_number",class:"form-label"%>
                </div>
              </div>
              <div class="col-3">
                <div class="form-outline">
                    <%=f.text_field :exp_month, class: "form-control form-control-lg", placeholder: "Expiry Month", style: "width:155px"%>
                  <%=f.label :exp_month, "Expire_month",class:"form-label"%>
                </div>
              </div>
              <div class="col-3">
                <div class="form-outline">
                    <%=f.text_field :exp_year, class: "form-control form-control-lg", placeholder: "Expiry Year", style: "width:100px"%>
                  <%=f.label :exp_year, "Expire_year",class:"form-label"%>
                </div>
              </div>
              <div class="col-2">
                <div class="form-outline">
                    <%=f.text_field :cvv, class:"form-control form-control-lg", placeholder: "CVV", style: "width:175px"%>
                    <%=f.label :cvv, class: "form-label" %>
                    
                </div>
              </div>
            </div>
            <%=f.submit "continue", class:"btn btn-success"%>
        </div>
      </div>
    </div>
  </div>
</section>
<%end%> 





