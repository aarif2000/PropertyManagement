<div class="container">
  <div class="row justify-content-center">
    <h4 class=" display-8 text-center">New Property</h4>
  </div>
  <div class="row justify-content-center">
        <%= form_with do |form| %>
          <div class="form-group">
            <%= form.label :name %>
            <%= form.text_field :name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :city %>
            <%= form.text_field :city, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :address %>
            <%= form.text_area :address, class: 'form-control' %>
          </div>
            <div class="form-group">
            <%= form.label :property_type %>
            <div class='cont'><%=  form.select :property_type, [['Hostel'],['Pg']]%></div>
          </div>
          <div class="form-group">
            <%= form.label :sharing %>
            <div class='cont'><%=  form.select :sharing, [['Single'],['Double']]%></div>
          </div>

           <div class="form-group">
            <%= form.label :no_of_Rooms  %>
            <%= form.number_field :no_of_rooms, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :available_rooms  %>
            <%= form.number_field :available_rooms, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :property_rent  %>
            <%= form.number_field :property_rent, class: 'form-control' %>
          </div>

            <div class="form-group">
            <%= form.label :beds %>
            <%= form.number_field :beds, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :bathooms %>
            <%= form.text_field :bathrooms, class: 'form-control' %>
          </div>

            <div class="form-group">
            <%= form.label :First_Amenities %>
            <%= form.text_field :amenities_1, class: 'form-control' %>
          </div>
           <div class="form-group">
            <%= form.label :Second_Amenities %>
            <%= form.text_field :amenities_2, class: 'form-control' %>
          </div>
           <div class="form-group">
            <%= form.label :Third_Amenities %>
            <%= form.text_field :amenities_3, class: 'form-control' %>
          </div>
          <br>
            <%= check_box_tag(:protocol_1,"Smoking Not Allowed") %>
            <%= label_tag(:protocol_1, "Smoking Not Allowed") %>
            <br>
                 <%= check_box_tag(:protocol_2,"Not allowed After 11 pm") %>
            <%= label_tag(:protocol_2, "Not allowed After 11 pm") %>
            <br>
              <%= form.label "Property Photo"%>
              <br/>
              <%= form.file_field :avatar, accept: 'image/png,image/jpeg', multiple: 'true'%>
          <div class="form-group">
            <%= form.submit class: 'form-control btn-primary' %>
          </div>
    <% end %>
  </div>
</div>