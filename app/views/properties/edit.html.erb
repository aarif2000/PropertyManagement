<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 mb-4 display-4 text-center">Update Your  Property</h4>
  </div>
  <div class="row justify-content-center">
        <%= form_with method: :patch do |form| %>

 <div class="form-group">
            <%= form.label :name %>
            <%= form.text_field :name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :description %>
            <%= form.text_field :description, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :city %>
            <%= form.text_field :city, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :address %>
            <%= form.text_area :address, class: 'form-control' %>
          </div>
            <div class="form-group">
            <%= form.label :price %>
            <%= form.number_field :price, class: 'form-control' %>
          </div>
            <div class="form-group">
            <%= form.label :beds %>
            <%= form.number_field :beds, class: 'form-control' %>
          </div>
            <div class="form-group">
            <%= form.label :bathrooms %>
            <%= form.number_field :bathrooms, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :roomsize %>
            <%= form.number_field :roomsize, class: 'form-control' %>
          </div>
              <%= form.label "Property Photo"%>
              <br/>
              <%= form.file_field :avatar, accept: 'image/png,image/jpeg'%>
          <div class="form-group">
            <%= form.submit class: 'form-control btn-primary' %>
          </div>
  <br/>
<% end %>